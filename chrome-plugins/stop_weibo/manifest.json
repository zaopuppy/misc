{
  "manifest_version": 2,

  "name": "JieWeibo",
  "description": "Good good study, day day up",
  "version": "1.0",

  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },

  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "*://weibo.com/*"
    // "*://*.weibo.com/*"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }

  // "page_action": {
  //   "default_icon": "icon.png"
  // }
}
